<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ml.davixxa.leskinen.amadeus.LaunchActivity">

    <ImageView
        android:id="@+id/imgViewBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/connect_bg"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="319dp"
        android:layout_height="240dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/amadeuslogo" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="connectClick"
        android:text="Connect"
        android:visibility="gone"
        tools:layout_editor_absoluteY="567dp"
        tools:layout_editor_absoluteX="384dp" />

    <ImageView
        android:id="@+id/imgCancel"
        android:layout_width="179dp"
        android:layout_height="74dp"
        android:layout_marginBottom="82dp"
        android:onClick="cancelClick"
        app:layout_constraintBottom_toBottomOf="@+id/imgViewBG"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/cancel_normal" />

    <ImageView
        android:id="@+id/imgConnect"
        android:layout_width="181dp"
        android:layout_height="80dp"
        android:onClick="connectClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/connect_normal"
        app:layout_constraintBottom_toBottomOf="@+id/imgViewBG"
        android:layout_marginBottom="132dp"
        app:layout_constraintHorizontal_bias="0.502" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="316dp"
        android:text="@string/connect_to_leskinen"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgViewBG"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintLeft_toLeftOf="@+id/imgViewBG"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgViewBG"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
